@model ShipFood.Models.tbUser
@{
    ViewBag.Title = "ViTien";
    Layout = "~/Views/Shared/_LayoutPageShipper.cshtml";
}
@{ List<ShipFood.Models.tbDonHang> listdh = ViewBag.listdh;}
<div class="content-body">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-fluid">
            <div class="form-head d-flex mb-3">
               
           
            </div>
        </div>
        <div class="row-donhang">
            @foreach (var item in listdh)
            {
                <div class="item border-bottom py-3">
                    <div class="row justify-content-between align-items-center">
                        <div class="col-auto">
                            <div class="item-label"><strong>Đơn hàng: #000 @item.madh</strong></div>
                            <p class="mb-0">Số dư: @(item.phiship.HasValue ? item.phiship.Value.ToString("N0") : "0") VND</p>
                        </div><!--//col-->
                    </div><!--//row-->
                </div><!--//item-->
            }

        </div>

    </div><!--//app-content-->
</div>

